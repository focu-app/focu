{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "build": {
    "beforeBuildCommand": "pnpm run next build",
    "beforeDevCommand": "pnpm run next dev",
    "devPath": "http://localhost:3000",
    "distDir": "../out"
  },
  "package": {
    "productName": "Focu",
    "version": "../package.json"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "process": {
        "exit": true
      },
      "shell": {
        "open": true,
        "sidecar": true,
        "scope": [
          {
            "name": "binaries/ollama-darwin-0.3.14",
            "sidecar": true,
            "args": [
              "serve"
            ]
          }
        ]
      },
      "globalShortcut": {
        "all": true
      },
      "notification": {
        "all": true
      },
      "window": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "category": "Productivity",
      "copyright": "",
      "deb": {
        "depends": []
      },
      "externalBin": [
        "binaries/ollama-darwin-0.3.14"
      ],
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "app.focu.Focu",
      "longDescription": "",
      "macOS": {
        "entitlements": null,
        "exceptionDomain": "",
        "frameworks": [],
        "providerShortName": null,
        "signingIdentity": null
      },
      "resources": [
        "icons/icon.icns"
      ],
      "shortDescription": "",
      "targets": "all",
      "windows": {
        "certificateThumbprint": null,
        "digestAlgorithm": "sha256",
        "timestampUrl": ""
      }
    },
    "security": {
      "csp": null
    },
    "updater": {
      "active": true,
      "endpoints": [
        "https://focu.app/api/latest-release"
      ],
      "dialog": true,
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDZDQzk1OUQzOEZDQjUyQjEKUldTeFVzdVAwMW5KYk1lTm1oL01XTFRvU1lHWHJwZ2JqbWVKWUpqUWw5eHNvaGtMM0FaMksrU0YK"
    },
    "windows": [
      {
        "title": "Focu",
        "label": "main",
        "visible": false,
        "width": 1020,
        "minWidth": 1020,
        "height": 750,
        "minHeight": 750,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "maximized": true,
        "fullscreen": false,
        "resizable": true,
        "decorations": true 
      }
    ],
    "systemTray": {
      "iconPath": "icons/icon.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": false
    }
  }
}
